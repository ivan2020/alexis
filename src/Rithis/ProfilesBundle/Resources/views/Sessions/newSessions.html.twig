{% extends "::layout.html.twig" %}

{% block body %}
    <script src="http://loginza.ru/js/widget.js" type="text/javascript"></script>
    <iframe src="http://loginza.ru/api/widget?overlay=loginza&token_url={{ url("loginza_post_sessions")|url_encode() }}"
            style="width:359px;height:300px;" scrolling="no" frameborder="no"></iframe>
    <hr />
    <p>{{ error.message }}</p>
    <form action="{{ path("post_sesions_check") }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />

        <button type="submit">login</button>

    </form>
{% endblock %}
