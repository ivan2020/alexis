{% for hotel in request.result %}
    <h1>{{ hotel.name }}</h1>
    <p>{{ hotel.description }}</p>
    {% if hotel.photos %}
        <p>
            {% for photo in hotel.photos %}
                <a href="{{ photo.url}}" target="_blank"><img src="{{ photo.url }}" alt="{{ photo.alt }}" width="100" height="100" /></a>
            {% endfor %}
        </p>
    {% endif %}
    {% if not loop.last %}
        <hr />
    {% endif %}
{% endfor %}
