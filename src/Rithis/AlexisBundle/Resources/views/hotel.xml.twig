<hotel id="{{ hotel._id }}" name="{{ hotel.name }}">
    <![CDATA[{{ hotel.description }}]]>
    {% if hotel.photos %}
    <photos>
        {% for photo in hotel.photos %}
        <photo original="{{ photo.original }}" big-thumbnail="{{ photo.big_thumbnail }}"  small-thumbnail="{{ photo.small_thumbnail }}" alt="{{ photo.alt }}" type="{{ photo.type }}" />
        {% endfor %}
    </photos>
    {% endif %}
</hotel>
