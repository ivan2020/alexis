    <div id="sponsors">
        <h2>Приглашаю <br>в путешествие <sup>20 264</sup></h2>
        {% for i in range (1,3) %}
            <div class="person">
                <div class="details">
                    <img src="http://cdn01.pegast.su/get/ee/9d/65/5e3a815c507622796429fe54e34b5a141671f115292aacf1a6cd6e7932/man.png" alt="" width="96" height="96">

                    <p class="name">
                        <a href="#">Александр<br>Мавроди</a>, 28
                    </p>

                    <p class="status">Приглашаю</p>

                    <p class="status_details">девушку или парня</p>
                </div>
                <div class="when">
                    <div class="duration">
                        <span class="from">С 12 июня</span>
                        <span class="to">по 12.06.2012</span>
                    </div>
                    <div class="time">на неделю</div>
                    <div class="clear"></div>
                </div>
